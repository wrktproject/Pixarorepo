# Pixaro Environment Variables
# Copy this file to .env and fill in your values
# All variables must be prefixed with VITE_ to be accessible in the application

# ============================================
# Ad Integration (Optional)
# ============================================

# Google AdSense Publisher ID
# Get this from your AdSense account
# VITE_ADSENSE_PUBLISHER_ID=ca-pub-xxxxxxxxxxxxxxxx

# Ad Unit Slot IDs
# Create ad units in your AdSense account and use their IDs here
# VITE_AD_SIDEBAR_SLOT=1234567890
# VITE_AD_BOTTOM_SLOT=0987654321

# ============================================
# Analytics (Optional)
# ============================================

# Google Analytics Measurement ID
# Get this from your Google Analytics account
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable/disable AI removal tool
# VITE_ENABLE_AI_REMOVAL=true

# Enable/disable ad display
# VITE_ENABLE_ADS=true

# ============================================
# Development (Optional)
# ============================================

# Enable debug logging in development
# VITE_DEBUG=false

# API endpoint for future features (not currently used)
# VITE_API_URL=https://api.example.com
